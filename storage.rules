rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own trip images
    match /trips/{userId}/{tripId}/{allPaths=**} {
      allow read: if true; // Public read access for sharing
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write their own plan images
    match /plans/{userId}/{planId}/{allPaths=**} {
      allow read: if true; // Public read access for marketplace
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write their own profile images
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Public read access for profiles
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
