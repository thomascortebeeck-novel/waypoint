rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own trip images
    match /trips/{userId}/{tripId}/{allPaths=**} {
      allow read: if true; // Public read access for sharing
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write plan images
    match /plans/{planId}/{allPaths=**} {
      allow read: if true; // Public read access for marketplace
      allow write: if request.auth != null; // Any authenticated user can upload plan images
    }
    
    // Allow authenticated users to read and write their own profile images
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Public read access for profiles
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow uploads to waypoint-photos (for Google Places photos)
    match /waypoint-photos/{photoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
